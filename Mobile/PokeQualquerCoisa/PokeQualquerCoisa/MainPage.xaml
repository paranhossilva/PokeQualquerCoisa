<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeQualquerCoisa.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#303030" Padding="24" CornerRadius="0">
            <Label Text="Poké Qualquer Coisa" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtTexto" Placeholder="Nome ou Número do Pokémon" />

        <Button x:Name="btnOk" Text="Enviar" BackgroundColor="#5D74FF" TextColor="White" CornerRadius="5" Clicked="btnOk_Clicked"/>

        <Label Text="Aplicativo desenvolvido utilizando a PokéAPI" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
